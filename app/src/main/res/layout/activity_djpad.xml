<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_djpad"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dija.mixpad.DJPad">

    <co.mobiwise.library.MusicPlayerView
        android:id="@+id/mpv1"
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:textSize = "14sp"
        app:textColor = "#80FFFFFF"
        app:buttonColor = "#FF0028"
        app:progressLoadedColor = "#00815E"
        app:progressEmptyColor = "#20FFFFFF"
        app:cover = "@drawable/mycover"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <co.mobiwise.library.MusicPlayerView
        android:id="@+id/mpv2"
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:textSize = "14sp"
        app:textColor = "#80FFFFFF"
        app:buttonColor = "#FF0028"
        app:progressLoadedColor = "#00815E"
        app:progressEmptyColor = "#20FFFFFF"
        app:cover = "@drawable/cover2"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />






</RelativeLayout>